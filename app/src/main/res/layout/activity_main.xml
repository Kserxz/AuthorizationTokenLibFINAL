<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/token_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/text_login"
        app:layout_constraintEnd_toStartOf="@+id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Авторизация"

        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="341dp"
        android:layout_marginBottom="1dp"
        android:text="Login"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_login"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="#808080"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_one_log"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1"
            />

            <ImageView
                android:id="@+id/image_two_log"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1" />

            <ImageView
                android:id="@+id/image_three_log"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1" />

            <ImageView
                android:id="@+id/image_four_log"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1" />

            <ImageButton
                android:id="@+id/cancel_log"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Cancel"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/krest" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_one"
        android:layout_width="290dp"
        android:layout_height="136dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/text_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_login">

        <GridLayout
            android:id="@+id/grid_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">


            <ImageButton
                android:id="@+id/img_button_1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="one"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="two"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="three"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="four"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="five"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="six"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="seven"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="eight"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="nine"
                android:scaleType="centerInside"
                 />

            <ImageButton
                android:id="@+id/img_button_10"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="ten"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/img_button_11"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="eleven"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/img_button_12"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="12"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/img_button_13"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="13"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/img_button_14"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="14"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/img_button_15"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="15"
                android:scaleType="centerInside"
                />

            <ImageButton
                android:id="@+id/img_button_16"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="16"
                android:scaleType="centerInside"
                />

        </GridLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_two"
        style="ce"
        android:layout_width="290dp"
        android:layout_height="136dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_password">

        <GridLayout
            android:id="@+id/grid_one_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">


            <ImageButton
                android:id="@+id/img_button_1_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_row="1"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="one"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_2_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="two"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_3_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="three"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_4_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="four"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_5_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="five"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_6_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="six"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_7_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="seven"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_8_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                android:contentDescription="eight"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_9_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="nine"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_10_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="ten"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_11_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="eleven"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_12_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="12"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_13_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="13"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_14_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="14"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_15_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="15"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/img_button_16_2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:contentDescription="16"
                android:scaleType="centerInside" />

        </GridLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_password"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="#808080"
        android:padding="2dp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_password">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_one_password"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1"
            />

            <ImageView
                android:id="@+id/image_two_password"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1" />

            <ImageView
                android:id="@+id/image_three_password"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1" />

            <ImageView
                android:id="@+id/image_four_password"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F1F1F1" />

            <ImageButton
                android:id="@+id/cancel_password"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Cancel"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/krest" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="100dp"
        android:text="Password"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/scroll_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_one" />

    <Button
        android:id="@+id/authorization"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Авторизация"
        android:textSize="18sp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_two" />

</androidx.constraintlayout.widget.ConstraintLayout>